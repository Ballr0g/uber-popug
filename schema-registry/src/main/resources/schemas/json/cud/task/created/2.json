{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "TaskCreatedReplicationEvent.v2",
  "description": "JSON schema for task data replication (version 2).",

  "definitions": {
    "eventData": {
      "title": "TaskCreatedReplicationEventData.v2",
      "type": "object",
      "properties": {
        "taskId": {
          "description": "A globally unique ID of a task.",
          "type": "string",
          "format": "uuid"
        },
        "assigneeId": {
          "description": "A globally unique ID of an assignee a task belongs to.",
          "type": "string",
          "format": "uuid"
        },
        "jiraId": {
          "description": "String-based task ID used in the task tracker.",
          "type": "string"
        },
        "taskDescription": {
          "description": "Description of a task.",
          "type": "string"
        },
        "creationDate": {
          "description": "Date-time of task creation.",
          "type": "string",
          "format": "date-time"
        }
      },

      "required": [
        "taskId",
        "assigneeId",
        "jiraId",
        "taskDescription",
        "creationDate"
      ]
    }
  },

  "type": "object",

  "properties": {
    "eventName":    { "type": "string", "enum": ["task.entity.created"] },
    "eventVersion": { "type": "integer", "enum": [2] },
    "eventId":      { "type": "string", "format": "uuid" },
    "eventTime":    { "type": "string", "format": "date-time" },
    "producer":     { "type": "string" },

    "data": {
      "$ref": "#/definitions/eventData"
    }
  },

  "required": [
    "eventName",
    "eventVersion",
    "eventId",
    "eventTime",
    "producer",
    "data"
  ]
}
