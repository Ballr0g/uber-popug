{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "TaskCompletedEvent.v1",
  "description": "JSON schema for task completion business event (version 1).",

  "definitions": {
    "eventData": {
      "type": "object",
      "title": "TaskCompletedEventData.v1",
      "properties": {
        "taskId": {
          "description": "A globally unique ID of a task.",
          "type": "string",
          "format": "uuid"
        },
        "assigneeId": {
          "description": "A globally unique ID of the assignee completing a task.",
          "type": "string",
          "format": "uuid"
        },
        "taskDescription": {
          "description": "Description of a task.",
          "type": "string"
        },
        "completionDate": {
          "description": "Date-time of task completion.",
          "type": "string",
          "format": "date-time"
        }
      },

      "required": [
        "taskId",
        "assigneeId",
        "taskDescription",
        "completionDate"
      ]
    }
  },

  "type": "object",

  "properties": {
    "eventName":    { "type": "string", "enum": ["task.completed"] },
    "eventVersion": { "type": "integer", "enum": [1] },
    "eventId":      { "type": "string", "format": "uuid" },
    "eventTime":    { "type": "string", "format": "date-time" },
    "producer":     { "type": "string" },

    "data": { "$ref": "#/definitions/eventData" }
  },

  "required": [
    "eventName",
    "eventVersion",
    "eventId",
    "eventTime",
    "producer",
    "data"
  ]
}
