{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "TaskReassignedEvent.v2",
  "description": "JSON schema for task reassignment business event (version 2).",

  "definitions": {
    "eventData": {
      "type": "object",
      "title": "TaskReassignedEventData.v2",
      "properties": {
        "taskId": {
          "description": "A globally unique ID of a task.",
          "type": "string",
          "format": "uuid"
        },
        "previousAssigneeId": {
          "description": "A globally unique ID of the previous assignee of a task.",
          "type": "string",
          "format": "uuid"
        },
        "newAssigneeId": {
          "description": "A globally unique ID of the new assignee of a task.",
          "type": "string",
          "format": "uuid"
        },
        "jiraId": {
          "description": "String-based task ID used in the task tracker.",
          "type": "string"
        },
        "taskDescription": {
          "description": "Description of a task.",
          "type": "string"
        },
        "reassignmentDate": {
          "description": "Date-time of task reassignment.",
          "type": "string",
          "format": "date-time"
        }
      },

      "required": [
        "taskId",
        "previousAssigneeId",
        "newAssigneeId",
        "jiraId",
        "taskDescription",
        "reassignmentDate"
      ]
    }
  },

  "type": "object",

  "properties": {
    "eventName":    { "type": "string", "enum": ["task.reassigned"] },
    "eventVersion": { "type": "integer", "enum": [2] },
    "eventId":      { "type": "string", "format": "uuid" },
    "eventTime":    { "type": "string", "format": "date-time" },
    "producer":     { "type": "string" },

    "data": { "$ref": "#/definitions/eventData" }
  },

  "required": [
    "eventName",
    "eventVersion",
    "eventId",
    "eventTime",
    "producer",
    "data"
  ]
}
